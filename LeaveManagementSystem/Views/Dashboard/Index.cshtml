

@model LeaveManagementSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container min-vh-100 py-4">
    <div class="container">

        <!-- Welcome Section -->
        <div class="text-center mb-5 text-white">
            <h2 class="fw-bold">Welcome, @ViewBag.UserName!</h2>
            <p class="lead">Role: @ViewBag.UserRole</p>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 text-white bg-primary h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-people fs-1 me-3"></i>
                        <div>
                            <h6 class="mb-0">Total Employees</h6>
                            <h2 class="fw-bold">@ViewBag.TotalEmployees</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 text-white bg-success h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-journal-check fs-1 me-3"></i>
                        <div>
                            <h6 class="mb-0">My Requests</h6>
                            <h2 class="fw-bold">@ViewBag.MyRequests</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 text-white bg-danger h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-hourglass-split fs-1 me-3"></i>
                        <div>
                            <h6 class="mb-0">Pending Approvals</h6>
                            <h2 class="fw-bold">@ViewBag.PendingApprovals</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-4 mb-5">
            @if (!User.IsInRole("Admin"))
            {
                <div class="col-md-4">
                    <div class="card action-card text-center shadow-sm border-0 rounded-4 p-4 h-100">
                        <i class="bi bi-pencil-square fs-1 text-primary"></i>
                        <h5 class="mt-3">Apply for Leave</h5>
                        <a href="@Url.Action("Create", "Leave")" class="btn btn-outline-primary mb-2 d-block">Go</a>
                    </div>
                </div>
            }

            <div class="col-md-4">
                <div class="card action-card text-center shadow-sm border-0 rounded-4 p-4 h-100">
                    <i class="bi bi-list-task fs-1 text-primary"></i>
                    <h5 class="mt-3">View My Requests</h5>
                    <a href="@Url.Action("MyRequests", "Leave")" class="btn btn-outline-primary mb-2 d-block">Go</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card action-card text-center shadow-sm border-0 rounded-4 p-4 h-100">
                    <i class="bi bi-person-lines-fill fs-1 text-secondary"></i>
                    <h5 class="mt-3">Update Profile</h5>
                    @* <a href="/Account/Profile" class="btn btn-outline-secondary mt-2">Go</a> *@
                    <a href="@Url.Action("Profile", "Employee")" class="btn btn-outline-secondary d-block">Go</a>

                </div>
            </div>

            @if (User.IsInRole("Manager") || User.IsInRole("HR") || User.IsInRole("Admin"))
            {
                
                    <div class="col-md-4 ">
                        <div class="card action-card text-center shadow-sm border-0 rounded-4 p-4 h-100">
                            <i class="bi bi-shield-check fs-1 text-warning"></i>
                            <h5 class="mt-3">Pending Approvals</h5>
                            @* <a href="/Manager/PendingRequests" class="btn btn-warning mt-2">View</a> *@
                            <a href="@Url.Action("PendingRequests", "Leave")" class="btn btn-warning mb-2 d-block">Go</a>
                            @if (User.IsInRole("HR") || User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("List", "Employee")" class="btn btn-outline-info mb-2 d-block">Employee List</a>
                                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-success d-block">Add New Employee</a>
                            }
                        </div>
                    </div>
                
            }

            @if (User.IsInRole("Admin"))
            {

                <div class="col-md-8 mx-auto">
                    <div class="card shadow-sm border-0 rounded-5 overflow-hidden">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-4">Only Activity</h5>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-hover table-bordered mb-3">
                                <thead class="table-light">
                                    <tr>
                                        <th>🪪S.No.</th>
                                        <th>👤Name</th>
                                        <th>📧Email Id</th>
                                        <th>💼Designation</th>
                                        <th>📅Request Date</th>
                                        <th>ℹ️Status</th>
                                    </tr>
                                </thead>

                                
                                <tbody>
                                    @{
                                        int serial = 1; // starting from 1
                                    }
                                    
                                    @foreach (var i in Model.leaveCreationActivities)
                                    {
                                        <tr>
                                            <td>@serial</td>
                                            <td>@i.Name</td>
                                            <td>@i.EmailId</td>
                                            <td>@i.Designation</td>
                                            <td>@i.Date.ToString("dd-MM-yyyy")</td>
                                            <td>
                                                @switch (i.Status)
                                                {
                                                    case LeaveManagementSystem.Models.LeaveStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case LeaveManagementSystem.Models.LeaveStatus.Approved:
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case LeaveManagementSystem.Models.LeaveStatus.Rejected:
                                                        <span class="badge bg-danger">Rejected</span>
                                                        break;
                                                }
                                            </td>
                                            
                                        </tr>
                                        serial++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
       

        <!-- Management Actions -->
        
        
        
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(135deg, #667eea, #00f2fe);
        margin: 0;
        min-height: 100vh;
    }
    /* Background Gradient */
    .dashboard-container {
        background: transparent;
    }

    /* Card hover effect */
    .action-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .action-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }
</style>




