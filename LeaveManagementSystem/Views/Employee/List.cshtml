@model IEnumerable<LeaveManagementSystem.ViewModels.EmployeeProfileViewModel>
@{
    ViewData["Title"] = "Employee List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Employee List</h2>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Add New Employee</a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Date of Joining</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.EmployeeId</td>
                                <td>@employee.FirstName @employee.LastName</td>
                                <td>@employee.Email</td>
                                <td>@employee.Department</td>
                                <td>@employee.Designation</td>
                                <td>@employee.DateOfJoining.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <p>No employees found.</p>
    </div>
}
