@model IEnumerable<LeaveManagementSystem.ViewModels.EmployeeProfileViewModel>
@{
    ViewData["Title"] = "Employee List";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-4 bg-glass border-override ">
                <div class="card-header text-white text-center py-4 model-header-gradient">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="fw-bold mb-0">
                            <i class="bi bi-list-check me-2"></i> Employee List
                        </h2>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-gradient px-4">
                            <i class="bi bi-plus-circle me-1"></i> Add Employee
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>🆔 Employee ID</th>
                                        <th>👤 Name</th>
                                        <th>📧 Email</th>
                                        <th>🏢 Department</th>
                                        <th>💼 Designation</th>
                                        <th>📅 Date of Joining</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>@employee.EmployeeId</td>
                                            <td>@employee.FirstName @employee.LastName</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Department</td>
                                            <td>@employee.Designation</td>
                                            <td>@employee.DateOfJoining.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">✨ No pending leave requests.</h5>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>


</div>


