@model LeaveManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* Full page gradient background */
    body {
        min-height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #74ebd5 0%, #9face6 100%);
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Card Header -->
            <div class="alert alert-danger text-center rounded-top-4">
                <h4 class="mb-0">Register New Employee</h4>
            </div>

            <!-- Card Body -->
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" ></div>

                    <!-- First and Last Name -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-bold"></label>
                            <input asp-for="FirstName" class="form-control rounded-pill" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control rounded-pill" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Email and EmployeeId -->
                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control rounded-pill" placeholder="example@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EmployeeId" class="form-label fw-bold"></label>
                            <input asp-for="EmployeeId" class="form-control rounded-pill bg-light" readonly />
                            <input type="hidden" asp-for="EmployeeId" />
                            <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Role -->
                    <div class="mt-3">
                        <label asp-for="Role" class="form-label fw-bold"></label>
                        <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select rounded-pill">
                            <option value="">Select Role</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <!-- Manager (hidden initially) -->
                    <div class="mt-3" id="managerField">
                        <label asp-for="ManagerId" class="form-label fw-bold">For Manager</label>
                        <select asp-for="ManagerId" class="form-select rounded-pill" asp-items="Model.ForManager">
                            <option value="">Select Manager</option>
                        </select>
                        <span asp-validation-for="ManagerId" class="text-danger small"></span>
                    </div>

                    <!-- Password and Confirm Password -->
                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">Register</button>
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#managerField").hide();

            $("#Role").change(function () {
                var selectedRole = $(this).val();
                if (selectedRole === "Employee") {
                    $("#managerField").show();
                } else {
                    $("#managerField").hide();
                    $("#ManagerId").val("");
                }
            });
        });
    </script>
}