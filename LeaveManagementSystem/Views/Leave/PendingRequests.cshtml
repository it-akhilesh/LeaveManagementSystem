@model IEnumerable<LeaveManagementSystem.ViewModels.LeaveRequestViewModel>
@{
    ViewData["Title"] = "Pending Leave Requests";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-4 bg-glass border-override">
                <div class="card-header text-white text-center py-4 model-header-gradient">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="fw-bold mb-0">
                            <i class="bi bi-hourglass-split me-2"></i> Pending Leave Requests
                        </h2>
                    </div>
                </div>

                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>👤 Employee</th>
                                        <th>📅 Start Date</th>
                                        <th>📅 End Date</th>
                                        <th>📊 Days</th>
                                        <th>🏷️ Type</th>
                                        <th>🕒 Applied On</th>
                                        <th class="text-center">⚡ Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><span class="fw-semibold">@item.EmployeeName</span></td>
                                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-info">@item.LeaveDays</span></td>
                                            <td>@item.LeaveType</td>
                                            <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-gradient rounded-pill px-3"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#approvalModal@(item.Id)">
                                                    Review
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">✨ No pending leave requests.</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modals -->
@foreach (var item in Model)
{
    <div class="modal fade" id="approvalModal@(item.Id)" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content shadow-lg border-0 rounded-4 border-override">
                <div class="modal-header text-white model-header-gradient ">
                    <h5 class="modal-title"><i class="bi bi-check2-square me-2"></i> Review Leave Request - @item.EmployeeName</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Employee:</strong> @item.EmployeeName</p>
                            <p><strong>Leave Type:</strong> @item.LeaveType</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Duration:</strong> @item.StartDate.ToString("dd/MM/yyyy") → @item.EndDate.ToString("dd/MM/yyyy")</p>
                            <p><strong>Total Days:</strong> <span class="badge bg-info">@item.LeaveDays</span></p>
                        </div>
                    </div>
                    <p><strong>Reason:</strong> @item.Reason</p>

                    <div class="form-group mt-3">
                        <label for="comments@(item.Id)" class="form-label fw-semibold">💬 Comments (Optional):</label>
                        <textarea id="comments@(item.Id)" class="form-control rounded-3 shadow-sm"
                                  rows="3" placeholder="Add your comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <form asp-action="Approve" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="comments" id="approveComments@(item.Id)" />
                        <button type="submit" class="btn btn-success px-4 rounded-pill"
                                onclick="setComments(@item.Id, 'approve')">
                            <i class="bi bi-check-circle me-1"></i> Approve
                        </button>
                    </form>
                    <form asp-action="Reject" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="comments" id="rejectComments@(item.Id)" />
                        <button type="submit" class="btn btn-danger px-4 rounded-pill"
                                onclick="setComments(@item.Id, 'reject')">
                            <i class="bi bi-x-circle me-1"></i> Reject
                        </button>
                    </form>
                    <button type="button" class="btn btn-outline-secondary px-4 rounded-pill"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function setComments(id, action) {
            const comments = document.getElementById('comments' + id).value;
            if (action === 'approve') {
                document.getElementById('approveComments' + id).value = comments;
            } else {
                document.getElementById('rejectComments' + id).value = comments;
            }
        }
    </script>
}

