@model LeaveManagementSystem.ViewModels.LeaveRequestViewModel
@{
    ViewData["Title"] = "Apply for Leave";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 border-override">
                <!-- Gradient Header -->
                <div class="card-header text-white text-center py-4 model-header-gradient">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-calendar-check me-2"></i> Apply for Leave
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- Dates -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-date me-1"></i> Start Date
                                    </label>
                                    <input asp-for="StartDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-date me-1"></i> End Date
                                    </label>
                                    <input asp-for="EndDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Leave Type -->
                        <div class="form-group mb-3">
                            <label asp-for="LeaveType" class="form-label fw-semibold">
                                <i class="bi bi-list-ul me-1"></i> Leave Type
                            </label>
                            <select asp-for="LeaveType" class="form-select form-control form-control-lg"
                                    asp-items="Html.GetEnumSelectList<LeaveManagementSystem.Models.LeaveType>()">
                                <option value="">Select Leave Type</option>
                            </select>
                            <span asp-validation-for="LeaveType" class="text-danger"></span>
                        </div>

                        <!-- Approver -->
                        <div class="form-group mb-3">
                            <label asp-for="ApproverId" class="form-label fw-semibold">
                                <i class="bi bi-person-check me-1"></i> For Approver
                            </label>
                            <select asp-for="ApproverId" class="form-select form-control form-control-lg" asp-items="Model.ForApproval">
                                <option value="">Select Approver</option>
                            </select>
                            <span asp-validation-for="ApproverId" class="text-danger"></span>
                        </div>

                        <!-- Reason -->
                        <div class="form-group mb-4">
                            <label asp-for="Reason" class="form-label fw-semibold">
                                <i class="bi bi-pencil-square me-1"></i> Reason
                            </label>
                            <textarea asp-for="Reason" class="form-control form-control-lg" rows="4"
                                      placeholder="Enter reason for leave"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            
                            <a asp-action="MyRequests" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-gradient btn-lg px-4 rounded-pil">
                                <i class="bi bi-send-fill me-1"></i> Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const startDate = document.getElementById('StartDate');
            const endDate = document.getElementById('EndDate');

            startDate.addEventListener('change', function () {
                endDate.min = startDate.value;
            });
        });
    </script>
}
