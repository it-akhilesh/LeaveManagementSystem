@model IEnumerable<LeaveManagementSystem.ViewModels.LeaveRequestViewModel>
@{
    ViewData["Title"] = "My Leave Requests";
}

<div class="container py-5">
    <!-- Header -->
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-4 bg-glass border-override ">
                <div class="card-header text-white text-center py-4 model-header-gradient">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="fw-bold mb-0">
                            <i class="bi bi-list-check me-2"></i> My Leave Requests
                        </h2>
                        <a asp-action="Create" class="btn btn-gradient px-4">
                            <i class="bi bi-plus-circle me-1"></i> Apply for Leave
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>📅 Start Date</th>
                                        <th>📅 End Date</th>
                                        <th>📊 Days</th>
                                        <th>🏷️ Type</th>
                                        <th>✅ Status</th>
                                        <th>📝 Applied On</th>
                                        <th class="text-center">⚡Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-info">@item.LeaveDays</span></td>
                                            <td>
                                                <span class="badge bg-info text-dark px-3 py-2">
                                                    @item.LeaveType
                                                </span>
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case LeaveManagementSystem.Models.LeaveStatus.Pending:
                                                        <span class="badge bg-warning text-dark px-3 py-2">Pending</span>
                                                        break;
                                                    case LeaveManagementSystem.Models.LeaveStatus.Approved:
                                                        <span class="badge bg-success px-3 py-2">Approved</span>
                                                        break;
                                                    case LeaveManagementSystem.Models.LeaveStatus.Rejected:
                                                        <span class="badge bg-danger px-3 py-2">Rejected</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-gradient rounded-pill px-3"
                                                        data-bs-toggle="modal" data-bs-target="#detailModal@(item.Id)">
                                                    <i class="bi bi-eye"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- Detail Modals -->
                        
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">✨ No pending leave requests.</h5>
                            <a asp-action="Create" class="btn btn-gradient px-4">
                                <i class="bi bi-plus-circle me-1"></i> Apply for Your First Leave
                            </a>
                        </div>

                        <div class="text-center py-5">
                            <h5 class="text-muted">✨ No pending leave requests.</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="detailModal@(item.Id)" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0 rounded-4 border-override">
                <div class="modal-header text-white model-header-gradient">
                    <h5 class="modal-title">
                        <i class="bi bi-file-text me-2"></i> Leave Request Details
                        
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Leave Type:</strong> @item.LeaveType</p>
                    <p><strong>Duration:</strong> @item.StartDate.ToString("dd/MM/yyyy") to @item.EndDate.ToString("dd/MM/yyyy") (@item.LeaveDays days)</p>
                    <p><strong>Reason:</strong> @item.Reason</p>
                    <p><strong>Status:</strong> @item.Status</p>
                    @if (!string.IsNullOrEmpty(item.Comments))
                    {
                        <p><strong>Comments:</strong> @item.Comments</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary px-4 rounded-pill" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

